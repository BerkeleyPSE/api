mixin userForm(user)
  form.form

    .form-group
      label(for="mongoId") Database ID
      input.form-control(type="text" id="mongoId" value=user._id readonly)

    .form-group
      label(for="name") Name
      input.form-control(type="text" name="name" id="name" value=user.name required readonly)

    .form-group
      label(for="email") Email
      input.form-control(type="email" name="email" id="email" value=user.email required readonly)

    .form-group
      label(for="role") Role
      input.form-control(type="text" name="role" id="role" value=user.role required readonly)

    .pt-4
      a.btn.btn-danger.float-right(href="/users") Go Back