extends layout

block content
  h2 #{type.toUpperCase()}
  ul.list-group.w-100
    each d in data
      li.list-group-item
        a(href=`/${type}/view/${d._id}`)= d.name
  hr
  div.count #{count} #{type}

  if type==='brothers'
    .mt-3
      a.btn.btn-primary(href="/brothers/update/active") Make all brothers visible
